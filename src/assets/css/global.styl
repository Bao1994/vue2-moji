@import './index.styl'

* {
    box-sizing: border-box;
}
html, body {
    width: 100%;
    min-height: 100%;
    touch-action: manipulation; // github.com/ftlabs/fastclick *//* IE11+ 禁止双击缩放，关于移动端300ms延迟：https://github.com/ftlabs/fastclick */
    -ms-touch-action: manipulation; /* IE10+ 禁止双击缩放 */
    -webkit-overflow-scrolling: touch; /* ios顺畅滑动 */
}
body {
    font-family: Roboto, Lato, sans-serif;
    color: #333;
    background: #f4f5f6;
}
// 适配大于768px的屏幕，采用居中布局。
// Tip：还需要限制rem最大font-size（/public/statilc/amfe-flexible.js）
@media screen and (min-width: 768px) {
    html {
        width: 768px;
        margin: auto auto;
    }
    .tab-container {
        width: 768px !important;    
    }
    .header-nav {
        width: 768px !important;    
    }
    .sky-bg {
        width: 768px !important;    
    }
}